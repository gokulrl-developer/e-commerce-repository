<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css">
    <title>Login</title>
  </head>
  <body class="bg-gray-100">
    <!-- Header -->
   <%- include('../partials/user-header') %>

    <!-- Login Section -->
    <div class="max-w-sm mx-auto my-12 bg-white p-6 rounded-lg shadow-md">
      <h3 class="text-center text-xl font-bold mb-4">Login</h3>
      <form onsubmit="handleLogin(event)">
        <div class="mb-4">
          <label for="email" class="block text-sm font-medium">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter email" class="w-full mt-1 p-2 border border-gray-300 rounded">
        </div>
        <div class="mb-4">
          <label for="password" class="block text-sm font-medium">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter password" class="w-full mt-1 p-2 border border-gray-300 rounded">
        </div>
        <div class="flex justify-between mb-4 text-sm">
          <a href="http://localhost:8000/sign-up" class="text-blue-500 hover:underline">Sign up</a>
          <a href="/forgot-password-email" class="text-blue-500 hover:underline">Forgot Password?</a>
        </div>
        <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600" >Login</button>
      </form>
      <hr class="my-4">
      <div class="text-center">
        <a href="http://localhost:8000/auth/google"> <div class="w-full py-2 px-4 border border-gray-300 rounded flex items-center justify-center space-x-2">
             <i class="bi bi-google"></i>
             <span>Continue with Google</span>
         </div>
     </a>
     </div>
    </div>

    <!-- Footer -->
    <%- include('../partials/user-footer') %>

    <script src="js/user/userLogin.js"></script>
  </body>
</html>
