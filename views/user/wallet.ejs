<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Carry Mart</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-blue-200">

  <!-- Header Section -->
  <%- include('../partials/user-header') %>


  <!-- Wallet Section -->
  <main class="container mx-auto my-8 flex flex-col md:flex-row">
      
       <!-- Sidebar -->
       <%- include('../partials/user-profile-sidebar') %>

      <!-- Wallet Section -->
      <section class="md:w-4/5 p-20 text-center">
        <div class="p-6 rounded-lg bg-indigo-500">
          <h2 class="font-bold text-black mb-4 text-2xl">My Wallet</h2>
          <div class="flex items-center mb-6">
            <p class="text-black font-bold text-2xl font-semibold">Total Balance : </p>
            <p class="text-black font-bold text-2xl"><%=wallet.balance%></p>
          </div>
<!-- Transaction history -->
          <div class="rounded-lg p-6">
            <h2 class="text-xl font-semibold mb-4">Transaction History</h2>
            <div class="overflow-x-auto">
              <%if(wallet.transactions.length===0){%>
                <div class="w-full">
                  <h4>No Transactions to show</h4>
                </div>
                <%}else{%>
                <table class="w-full">
                    <thead>
                        <tr class="text-left border-black border">
                            <th class="pb-2">Date</th>
                            <th class="pb-2">Description</th>
                            <th class="pb-2">Type</th>
                            <th class="pb-2">Amount</th>
                        </tr>
                    </thead>
                    <tbody id="transactionTableBody">
                      <%wallet.transactions.forEach((transaction)=>{%>
                        <tr class="border-black border">
                        <td class="py-2"><%=new Date(transaction.date).toLocaleDateString()%></td>
                        <td class="py-2"><%=transaction.description%></td>
                        <td class="py-2"><%=transaction.type%></td>
                        <td class="py-2 <%=transaction.amount > 0 ? 'text-green-500' : 'text-red-500'%>">
                          <%=transaction.amount > 0 ? '+' : '-'%>₹<%=Math.abs(transaction.amount).toFixed(2)%>
                        </td>
                    </tr>
                    <%})%>
                    </tbody>
                </table>
                <%}%>
            </div>
            <div class="mt-4 flex justify-between items-center">
                <div>
                    <span id="pageInfo" class="text-sm text-gray-400"></span>
                </div>
                <div class="flex gap-2">
                    <button id="prevPage" class="bg-blue-800 text-white px-3 py-1 rounded hover:bg-gray-700 transition-colors">Previous</button>
                    <button id="nextPage" class="bg-blue-800 text-white px-3 py-1 rounded hover:bg-gray-700 transition-colors">Next</button>
                </div>
            </div>
        </div>
