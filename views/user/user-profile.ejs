<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CarryMart</title>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  <!-- Header -->
  <%- include('../partials/user-header') %>

  <!-- Main Content -->
  <main class="container mx-auto mb-8 mt-8 gap-3 px-4 flex flex-col md:flex-row">
   
  <!-- Sidebar -->
  <%- include('../partials/user-profile-sidebar') %>


    <!-- Personal Information Form -->
    <section class="w-full md:w-4/5 bg-blue-100 text-lg shadow-lg rounded-lg p-6">
      <h2 class="text-xl font-bold mb-4">Personal Information</h2>
      <form action="#" method="POST" class="space-y-4">
        <div>
          <label for="firstname" class="block font-medium text-gray-700">Firstname</label>
          <input type="text" id="firstname" name="firstname" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-cyan-400 focus:border-cyan-400">
        </div>
        <div>
          <label for="lastname" class="block  font-medium text-gray-700">Lastname</label>
          <input type="text" id="lastname" name="lastname" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-cyan-400 focus:border-cyan-400">
        </div>
        <div>
          <label for="email" class="block font-medium text-gray-700">Email</label>
          <input type="email" id="email" name="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-cyan-400 focus:border-cyan-400">
        </div>
        <div>
          <label for="mobile" class="block font-medium text-gray-700">Mobile</label>
          <input type="tel" id="mobile" name="mobile" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-cyan-400 focus:border-cyan-400">
        </div>
        <button type="submit" class="bg-black text-white font-bold py-2 px-4 rounded hover:bg-gray-800">Update</button>
      </form>
    </section>
  </main>

  <!-- Footer Section -->
  <%- include('../partials/user-footer') %>

</body>
</html>
