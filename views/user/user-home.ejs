<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Hello, world!</title>
  </head>
  <body class="bg-[#eaf8ff]">
    <!-- Header Section -->
   <%- include('../partials/user-header') %>

    <!-- Hero Section -->
    <section class="py-5 text-center bg-[#f0f8ff]">
      <div class="container">
        <img src="banner-image.jpg" alt="Hero Banner" class="img-fluid rounded">
      </div>
    </section>

    <!-- New Arrivals Section -->
    <section class="py-5">
      <div class="container">
        <h2 class="font-bold text-center my-8">New Arrivals</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <!-- Product Cards -->
          <% for(let i = 0; i < 4; i++) { %>
          <div class="product-card text-center">
            <img src="product<%= i + 1 %>.jpg" alt="Product <%= i + 1 %>" class="max-w-full h-auto rounded-lg">
            <h6 class="mt-2">Product Name</h6>
            <p>$50</p>
          </div>
          <% } %>
        </div>
      </div>
    </section>

    <!-- Featured Products Section -->
    <section class="py-5 bg-gray-100">
      <div class="container">
        <h2 class="font-bold text-center my-8">Featured Products</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <!-- Product Cards -->
          <% for(let i = 4; i < 8; i++) { %>
          <div class="product-card text-center">
            <img src="product<%= i + 1 %>.jpg" alt="Product <%= i + 1 %>" class="max-w-full h-auto rounded-lg">
            <h6 class="mt-2">Product Name</h6>
            <p>$50</p>
          </div>
          <% } %>
        </div>
      </div>
    </section>

    <!-- Footer Section -->
    <%- include('../partials/user-footer') %>
  </body>
</html>
