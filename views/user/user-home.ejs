<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Hello, world!</title>
  </head>
  <body class="bg-[#eaf8ff]">
    <!-- Header Section -->
    <header>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid bg-[#54aad4]">
          <a class="navbar-brand" href="/"><img src="/images/logo.svg" alt="Logo"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 flex space-x-4">
              <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
              <li class="nav-item"><a class="nav-link" href="/shopAll">Shop</a></li>
              <li class="nav-item"><a class="nav-link" href="#">About us</a></li>
              <li class="nav-item"><a class="nav-link" href="#">Contact us</a></li>
              <li class="nav-item"><a class="nav-link" href="/login"><img src="/images/profileicon.svg" class="w-8 h-6" alt="Profile"></a></li>
              <li class="nav-item"><a class="nav-link" href="#"><img src="/images/carticon.svg" class="w-8 h-6" alt="Cart"></a></li>
            </ul>
            <form class="d-flex" role="search">
              <input class="form-control me-2 p-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success p-2" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
    </header>

    <!-- Hero Section -->
    <section class="py-5 text-center bg-[#f0f8ff]">
      <div class="container">
        <img src="banner-image.jpg" alt="Hero Banner" class="img-fluid rounded">
      </div>
    </section>

    <!-- New Arrivals Section -->
    <section class="py-5">
      <div class="container">
        <h2 class="font-bold text-center my-8">New Arrivals</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <!-- Product Cards -->
          <% for(let i = 0; i < 4; i++) { %>
          <div class="product-card text-center">
            <img src="product<%= i + 1 %>.jpg" alt="Product <%= i + 1 %>" class="max-w-full h-auto rounded-lg">
            <h6 class="mt-2">Product Name</h6>
            <p>$50</p>
          </div>
          <% } %>
        </div>
      </div>
    </section>

    <!-- Featured Products Section -->
    <section class="py-5 bg-gray-100">
      <div class="container">
        <h2 class="font-bold text-center my-8">Featured Products</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <!-- Product Cards -->
          <% for(let i = 4; i < 8; i++) { %>
          <div class="product-card text-center">
            <img src="product<%= i + 1 %>.jpg" alt="Product <%= i + 1 %>" class="max-w-full h-auto rounded-lg">
            <h6 class="mt-2">Product Name</h6>
            <p>$50</p>
          </div>
          <% } %>
        </div>
      </div>
    </section>

    <!-- Footer Section -->
    <footer class="bg-[#004a6e] text-white py-5">
      <div class="container mx-auto grid grid-cols-1 md:grid-cols-4 gap-8 text-center md:text-left">
        <!-- Branding Section -->
        <div>
          <h5 class="text-dark">Driven by <span class="text-dark">Excellence.</span></h5>
        </div>

        <!-- Support Section -->
        <div>
          <h6 class="font-bold">Support</h6>
          <ul class="list-none">
            <li><a href="#" class="text-white">Order Status</a></li>
            <li><a href="#" class="text-white">Product Support</a></li>
            <li><a href="#" class="text-white">Shipping & Return Policy</a></li>
            <li><a href="#" class="text-white">Complaint Registration</a></li>
          </ul>
        </div>

        <!-- About Us Section -->
        <div>
          <h6 class="font-bold">About Us</h6>
          <ul class="list-none">
            <li><a href="#" class="text-white">Order Status</a></li>
            <li><a href="#" class="text-white">Privacy Policy</a></li>
            <li><a href="#" class="text-white">Terms of Use</a></li>
            <li><a href="#" class="text-white">FAQ</a></li>
          </ul>
        </div>

        <!-- Contact Section -->
        <div>
          <h6 class="font-bold">Contact</h6>
          <p>Email: <a href="mailto:carrymart@gmail.com" class="text-white">carrymart@gmail.com</a></p>
          <p>Phone: +91 9999999999</p>
        </div>
      </div>

      <!-- Footer Disclaimer -->
      <div class="text-center mt-4">
        <p class="text-muted text-sm">*All product names, logos, and brands are property of their respective owners. Use of these names, logos, and brands does not imply endorsement.</p>
      </div>

      <!-- Footer Bottom -->
      <div class="text-center mt-3">
        <p>&copy; 2024 Carry Mart. All rights reserved.</p>
      </div>
    </footer>

  </body>
</html>
