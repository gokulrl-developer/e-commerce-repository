<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-[#eaf8ff]">

    <div class="container mx-auto my-5">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-5">

        <!-- Product Image Thumbnails -->
        <div class="flex flex-col items-center gap-2" id="thumbnails">
          <% productImageUrls.forEach((image, index) => { %>
            <img src="<%= image.url %>" class="w-24 h-24 object-cover rounded-lg cursor-pointer hover:opacity-80" 
                 id="<%= index %>" onclick="changeImage('<%= image.url %>')"/>
          <% }); %>
        </div>

        <!-- Main Product Image -->
        <div class="text-center col-span-1 md:col-span-1">
          <img src="" class="w-full h-80 object-cover rounded-lg shadow-lg" id="main-image" />
        </div>

        <!-- Product Details -->
        <div class="space-y-4">
          <h3 class="font-bold text-xl">Product Name: Backpack XYZ</h3>
          <p><strong>Brand Name:</strong> Brand ABC</p>
          <p><strong>Price:</strong> $50</p>
          <p><strong>Gender:</strong> Unisex</p>
          <p><strong>Specifications:</strong> Lightweight, Durable, Waterproof</p>
          
          <div class="flex gap-3 mt-4">
            <button class="bg-[#007bff] text-white px-8 py-3 rounded-lg hover:bg-[#0056b3] w-full">Buy Now</button>
            <button class="border border-[#007bff] text-[#007bff] px-8 py-3 rounded-lg hover:bg-[#007bff] hover:text-white w-full">Add to Cart</button>
          </div>
        </div>
      </div>

      <!-- Related Products -->
      <div class="mt-10">
        <h4 class="text-center font-semibold text-xl mb-5">Related Products</h4>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
          <% relatedProducts.forEach((product) => { %>
            <div class="text-center">
              <img src="<%= product.firstImageUrl %>" alt="Related Product" class="w-full h-40 object-cover rounded-lg shadow-sm mb-2">
              <h6 class="font-medium"><%= product.name %></h6>
              <p class="text-lg"><%= product.price %></p>
            </div>
          <% }); %>
        </div>
      </div>
    </div>

    <script>
      function changeImage(url) {
        document.getElementById("main-image").src = url;
      }
    </script>
  </body>
</html>
