<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>sign-up</title>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/style.css">
</head>

<body class="bg-gray-100">
    <!-- Header Section -->
     <%- include('../partials/user-header') %>

    <!-- Main Content -->
    <div class="container mx-auto my-8 max-w-xl">
        <div class="bg-[#eef6f9] p-8 rounded-lg">
            <h3 class="text-center text-2xl font-semibold mb-6">Sign-up</h3>
            <form onclick="handleSignup(event)">
                <div class="mb-4">
                    <label for="fullName" class="block text-sm font-semibold">Full Name</label>
                    <input type="text" class="form-control w-full py-2 px-3 rounded" id="fullName" placeholder="Enter your full name" name="name">
                    <div id="fullName-error" class="error-text text-red-500"></div>

                </div>
                <div class="mb-4">
                    <label for="email" class="block text-sm font-semibold">Email</label>
                    <input type="email" class="form-control w-full py-2 px-3 rounded" id="email" placeholder="Enter your email" name="email">
                    <div id="email-error" class="error-text text-red-500"></div>

                </div>
                <div class="mb-4">
                    <label for="contact" class="block text-sm font-semibold">Contact</label>
                    <input type="number" class="form-control w-full py-2 px-3 rounded" id="contact" placeholder="Enter your contact number" name="mobile">
                    <div id="contact-error" class="error-text text-red-500"></div>

                </div>
                <div class="mb-4">
                    <label for="password" class="block text-sm font-semibold">Password</label>
                    <input type="password" class="form-control w-full py-2 px-3 rounded" id="password" placeholder="Enter your password" name="password">
                    <div id="password-error" class="error-text text-red-500"></div>

                </div>
                <div class="mb-4">
                    <label for="confirmPassword" class="block text-sm font-semibold">Confirm Password</label>
                    <input type="password" class="form-control w-full py-2 px-3 rounded" id="confirmPassword" placeholder="Confirm your password" name="confirmPassword">
                    <div id="confirm-password-error" class="error-text text-red-500"></div>

                </div>
                <div class="flex justify-between mb-4">
                    <a href="/login" class="text-sm text-blue-500">Login</a>
                    <a href="/forgot-password-email" class="text-sm text-blue-500">Forgot Password?</a>
                </div>
                <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white rounded hover:bg-blue-700">Sign Up</button>
            </form>
            <hr class="my-6">
            <div class="text-center">
               <a href="http://localhost:8000/auth/google"> <div class="w-full py-2 px-4 border border-gray-300 rounded flex items-center justify-center space-x-2">
                    <i class="bi bi-google"></i>
                    <span>Continue with Google</span>
                </div>
            </a>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../partials/user-footer') %>
    <script src="js/user/userSignup.js"></script>
    
</body>

</html>
