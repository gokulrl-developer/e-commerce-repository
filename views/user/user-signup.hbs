<style>
    body {
      background-color: #f8f9fa;
    }
    .navbar {
      background-color: #00c8ff;
    }
    .navbar-brand {
      font-weight: bold;
      color: #000;
    }
    .signup-container {
      margin: 3rem auto;
      max-width: 400px;
      background-color: #eef6f9;
      padding: 2rem;
      border-radius: 8px;
    }
    footer {
      background-color: #5c99a3;
      color: #fff;
      padding: 2rem 1rem;
    }
    footer a {
      color: #fff;
      text-decoration: none;
    }
  </style>
<!-- Sign-up Section -->
  <div class="signup-container">
    <h3 class="text-center">Sign-up</h3>
    <form action="/sign-up" method="POST">
      <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="fullName" placeholder="Enter your full name" name="name">
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" placeholder="Enter your email"name="email">
      </div>
      <div class="mb-3">
        <label for="contact" class="form-label">Contact</label>
        <input type="text" class="form-control" id="contact" placeholder="Enter your contact number" name="mobile">
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Enter your password" name="password">
      </div>
      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm your password" name="confirmPassword">
      </div>
      <div class="d-flex justify-content-between mb-3">
        <a href="#">Login</a>
        <a href="#">Forgot Password?</a>
      </div>
      <button type="submit" class="btn btn-primary w-100">Sign Up</button>
    </form>
    <hr>
    <div class="text-center">
      <button class="btn btn-outline-dark w-100">
        <i class="bi bi-google"></i> Continue with Google
      </button>
    </div>
  </div>