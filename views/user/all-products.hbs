
  <style>
    .filter-section {
      background-color: #f8f9fa;
      padding: 15px;
      border-radius: 8px;
    }
    .product-card img {
      width: 100%;
      height: auto;
    }
    .load-more {
      text-align: center;
      margin-top: 20px;
    }
  </style>


 

  <!-- Main Content -->
  <div class="container my-4">
    <div class="row">
      <!-- Sidebar -->
      <aside class="col-lg-3 col-md-4 mb-4">
        <div class="filter-section">
          <h4>Categories</h4>
          <ul class="list-unstyled">
            <li><input type="checkbox" id="backpacks"> <label for="backpacks">Backpacks</label></li>
            <li><input type="checkbox" id="handbags"> <label for="handbags">Hand Bags</label></li>
            <li><input type="checkbox" id="slingbags"> <label for="slingbags">Sling Bags</label></li>
            <li><input type="checkbox" id="trolleybags"> <label for="trolleybags">Trolley Bags</label></li>
            <li><input type="checkbox" id="wallets"> <label for="wallets">Wallets</label></li>
          </ul>
          <h4>Filter</h4>
          <p>Gender</p>
          <ul class="list-unstyled">
            <li><input type="radio" name="gender" id="men"> <label for="men">Men</label></li>
            <li><input type="radio" name="gender" id="women"> <label for="women">Women</label></li>
            <li><input type="radio" name="gender" id="unisex"> <label for="unisex">Unisex</label></li>
          </ul>
          <p>Price</p>
          <div class="d-flex">
            <input type="number" class="form-control me-2" placeholder="Min">
            <input type="number" class="form-control" placeholder="Max">
          </div>
        </div>
      </aside>

      <!-- Product Section -->
      <main class="col-lg-9 col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2>Our Collection</h2>
          <select class="form-select w-auto">
            <option selected>Sort</option>
            <option value="price-low-high">Price: Low to High</option>
            <option value="price-high-low">Price: High to Low</option>
            <option value="popular">Most Popular</option>
          </select>
        </div>
        <div class="mb-3">
          <input type="text" class="form-control" placeholder="Search an item">
        </div>
        <div class="row g-3">
          <!-- Product Card -->
          {{#each products}}
          <div class="col-md-4 col-sm-6">
            <div class="card product-card">
              <img src="{{firstImageUrl}}" alt="Product Image">
              <div class="card-body text-center">
                <h6 class="card-title">{{this.productName}}</h6>
                <p class="card-text">{{this.price}}.</p>
                <a href="/product/{{this._id}}" class="btn btn-primary">view product</a>
              </div>
            </div>
          </div>
          {{/each}}           
        </div>
        <div class="load-more">
          <button class="btn btn-primary">Load More</button>
        </div>
      </main>
    </div>
  </div>

  